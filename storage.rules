rules_version = '2';

// BIS-SMS Storage Security Rules
//
// PERFORMANCE NOTE: These rules use Firestore reads to check user roles and relationships.
// For better performance in production, consider using Firebase Auth Custom Claims for user roles.
// This implementation prioritizes security correctness and clarity over performance.

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions for authentication and authorization
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function userExists() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/users/$(request.auth.uid));
    }
    
    function getUserData() {
      // Note: This function should only be called after verifying userExists() returns true
      // All role-checking functions call userExists() before calling getUserData()
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return request.auth != null && 
             userExists() &&
             getUserData().role == 'admin';
    }
    
    function isTeacher() {
      return request.auth != null && 
             userExists() &&
             getUserData().role == 'teacher';
    }
    
    function isStudent() {
      return request.auth != null && 
             userExists() &&
             getUserData().role == 'student';
    }
    
    function isParent() {
      return request.auth != null && 
             userExists() &&
             getUserData().role == 'parent';
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isParentOfStudent(studentId) {
      return isParent() && 
             'childrenIds' in getUserData() &&
             studentId in getUserData().childrenIds;
    }
    
    // Validate file size (10MB max for most files)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Validate large file size (50MB max for videos/large documents)
    function isValidLargeSize() {
      return request.resource.size < 50 * 1024 * 1024;
    }
    
    // Validate image file types
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Validate document file types
    function isDocument() {
      return request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document') ||
             request.resource.contentType.matches('application/vnd.ms-excel') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.spreadsheetml.sheet') ||
             request.resource.contentType.matches('text/plain');
    }
    
    // Validate video file types
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    // Validate GIF files (often used for emoji/reactions)
    function isGif() {
      return request.resource.contentType == 'image/gif';
    }
    
    // Validate emoji/sticker images (small images for reactions)
    function isEmojiImage() {
      return isImage() && request.resource.size < 1 * 1024 * 1024; // Max 1MB for emojis
    }
    
    // Profile pictures for users
    match /profiles/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isOwner(userId) || isAdmin()) &&
                      isImage() &&
                      isValidSize();
    }
    
    // Student photos/documents
    match /students/{studentId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() && 
                      (isImage() || isDocument()) &&
                      isValidSize();
    }
    
    // Teacher documents and photos
    match /teachers/{teacherId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if (isAdmin() || isOwner(teacherId)) && 
                      (isImage() || isDocument()) &&
                      isValidSize();
    }
    
    // Parent documents and photos
    match /parents/{parentId}/{fileName} {
      allow read: if isAuthenticated() && (isOwner(parentId) || isAdmin());
      allow write: if (isAdmin() || isOwner(parentId)) && 
                      (isImage() || isDocument()) &&
                      isValidSize();
    }
    
    // Teacher Portal - Assignments uploaded by teachers
    match /teacher-portal/{teacherId}/assignments/{assignmentId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if (isAdmin() || isOwner(teacherId)) && 
                      (isDocument() || isImage() || isVideo()) &&
                      isValidLargeSize();
    }
    
    // Teacher Portal - Attendance registers
    match /teacher-portal/{teacherId}/attendance/{fileName} {
      allow read: if isAuthenticated() && (isAdmin() || isOwner(teacherId) || isTeacher());
      allow write: if (isAdmin() || isOwner(teacherId)) && 
                      (isDocument() || 
                       request.resource.contentType.matches('application/json') ||
                       request.resource.contentType.matches('text/csv')) &&
                      isValidSize();
    }
    
    // Teacher Portal - Work documents and materials
    match /teacher-portal/{teacherId}/work/{fileName} {
      allow read: if isAuthenticated() && (isAdmin() || isOwner(teacherId) || isTeacher());
      allow write: if (isAdmin() || isOwner(teacherId)) && 
                      (isDocument() || isImage() || isVideo()) &&
                      isValidLargeSize();
    }
    
    // Homework submissions by students
    match /homework/{classId}/{studentId}/{fileName} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || isTeacher() || isOwner(studentId));
      allow write: if isAuthenticated() && 
                      (isOwner(studentId) || isTeacher() || isAdmin()) &&
                      (isDocument() || isImage()) &&
                      isValidSize();
    }
    
    // Homework assignments uploaded by teachers
    match /assignments/{classId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if (isAdmin() || isTeacher()) && 
                      (isDocument() || isImage() || isVideo()) &&
                      isValidLargeSize();
    }
    
    // Health records documents
    match /health/{studentId}/{fileName} {
      allow read: if isAdmin() || 
                     isOwner(studentId) ||
                     isParentOfStudent(studentId);
      allow write: if isAdmin() && 
                      (isDocument() || isImage()) &&
                      isValidSize();
    }
    
    // School announcements attachments
    match /announcements/{announcementId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if (isAdmin() || isTeacher()) && 
                      (isDocument() || isImage() || isVideo()) &&
                      isValidLargeSize();
    }
    
    // School events media
    match /events/{eventId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if (isAdmin() || isTeacher()) && 
                      (isImage() || isVideo()) &&
                      isValidLargeSize();
    }
    
    // Report cards and certificates
    match /reports/{studentId}/{fileName} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || 
                      isTeacher() || 
                      isOwner(studentId) ||
                      isParentOfStudent(studentId));
      allow write: if (isAdmin() || isTeacher()) && 
                      isDocument() &&
                      isValidSize();
    }
    
    // Financial documents (receipts, invoices)
    match /finance/{type}/{documentId}/{fileName} {
      allow read: if isAdmin();
      allow write: if isAdmin() && 
                      (isDocument() || isImage()) &&
                      isValidSize();
    }
    
    // Achievement certificates and awards
    match /achievements/{studentId}/{fileName} {
      allow read: if isAuthenticated() && 
                     (isAdmin() || 
                      isTeacher() || 
                      isOwner(studentId) ||
                      isParentOfStudent(studentId));
      allow write: if (isAdmin() || isTeacher()) && 
                      (isDocument() || isImage()) &&
                      isValidSize();
    }
    
    // School branding and assets (logos, banners, etc.)
    match /assets/{assetType}/{fileName} {
      allow read: if true; // Public read for school branding
      allow write: if isAdmin() && 
                      isImage() &&
                      isValidSize();
    }
    
    // General uploads - restricted
    match /uploads/{userId}/{fileName} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow write: if isAuthenticated() && 
                      isOwner(userId) &&
                      (isDocument() || isImage()) &&
                      isValidSize();
    }
    
    // Choptso chat attachments
    match /choptso/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      isOwner(userId) &&
                      (isDocument() || isImage() || isVideo() || isGif()) &&
                      isValidSize();
    }
    
    // Choptso shared files in conversations
    match /choptso-shared/{conversationId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isDocument() || isImage() || isVideo() || isGif()) &&
                      isValidSize();
    }
    
    // Choptso custom emoji/stickers uploaded by users
    match /choptso-emojis/{userId}/{emojiId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      isOwner(userId) &&
                      isEmojiImage();
    }
    
    // Choptso shared emoji/stickers (school-wide or class-wide)
    match /choptso-emojis-shared/{emojiId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() && isEmojiImage();
    }
    
    // Choptso voice notes
    match /choptso-voice/{conversationId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      request.resource.contentType.matches('audio/.*') &&
                      request.resource.size < 10 * 1024 * 1024; // Max 10MB for voice notes
    }
    
    // User status/story media (24-hour ephemeral content)
    match /statuses/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isImage() || request.resource.contentType == 'image/png') &&
                      request.resource.size < 5 * 1024 * 1024; // Max 5MB for status images
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
